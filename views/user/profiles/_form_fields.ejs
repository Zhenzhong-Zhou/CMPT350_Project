<div>
    <label>Gender</label>
    <select name="gender" required="required">
        <option>Male</option>
        <option>Female</option>
        <option>Others</option>
        <option>Unknown</option>
    </select>
</div>

<div>
    <label>Age</label>
    <input type="number" id="age" name="age" min="18" placeholder="Age" value=""
           required="required">
</div>

<div>
    <label>Portrait</label>
    <input type="file" name="portrait" class="filepond" required>
</div>

<div>
    <label>Phone Number</label>
    <input type="tel" id="phoneNumber" name="phoneNumber"  minlength="10" maxlength="19" size="20"
           placeholder="Phone Number" value="(000)-(000)-(0000)"
           required="required">
</div>