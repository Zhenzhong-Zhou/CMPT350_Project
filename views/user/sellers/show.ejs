<h1>Seller Info</h1>

<h2>if there is no seller in the product, this page cannot be rendered,
    which means if the whole app does not have any seller, no seller can upload products.</h2>

<div>
    <%if (product.seller != null) {%>
        <div style="width: 90px">
            <img height="50px" width="50px" style="border-radius: 50px" src="<%=product.seller.portraitPath%>">
            <h3 style="float: right"><%=product.seller.username%></h3>
        </div>
    <%}%>
</div>

<%if (locals.user != null) {%>
    <%if (locals.user.admin === 2 && locals.user.username === product.seller.username) {%>
        <div>
            <ul>
                <li><a href="/markets/sellers/products/new">Add Product</a></li>
                <li><a href="/markets/sellers/products/<%=product.seller.id%>/display">Products</a></li>
                <li><a href="/markets/sellers/products/<%=product.id%>/edit">Edit</a></li>
            </ul>
        </div>
    <%}else {%>
        <br><br>
    <%}%>
<%}else {%>
    <br><br>
<%}%>

<h2>Products By <%=product.seller.username%></h2>
<div style="display: flex;">
    <%products.forEach(product => {%>
        <a href="/markets/sellers/products/<%=product.id%>">
            <img height="150px" width="100px" src="<%=product.coverImagePath%>" alt="image">
        </a>
        <div>
            <li><%=product.productName%></li>
            <li><%=product.price%></li>
        </div>
    <%})%>
</div>
