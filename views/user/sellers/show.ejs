<h1>Seller Info</h1>

<div>
    <%if (locals.user != null) {%>
        <div style="width: 90px">
            <img height="50px" width="50px" style="border-radius: 50px" src="<%=user.portraitPath%>">
            <h3 style="float: right"><%=user.username%></h3>
        </div>
    <%}%>
</div>

<%if (locals.user != null) {%>
    <%if (locals.user.admin === 2) {%>
        <div>
            <ul>
                <li><a href="/markets/sellers/products/new">Add Product</a></li>
                <p>link: /markets/sellers/products/=product.seller.id%>/display necessary?</p>
                <li><a href="#">Edit ? Seller</a></li>
            </ul>
        </div>
    <%}else {%>
        <br><br>
    <%}%>
<%}else {%>
    <br><br>
<%}%>

<h2>Products By <%=locals.user.username%></h2>
<div style="display: flex;">
    <%products.forEach(product => {%>
        <a href="/markets/sellers/products/<%=product.id%>">
            <img height="150px" width="100px" src="<%=product.coverImagePath%>" alt="image">
        </a>
        <div>
            <li><%=product.productName%></li>
            <li><%=product.price%></li>
        </div>
    <%})%>
</div>
