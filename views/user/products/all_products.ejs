<h2><%=title%></h2>
<div style="display: flex; height: 500px;">
    <%products.forEach(product => {%>
    <div style="width: 10rem">
        <a href="/categories/products/<%=product.category%>/<%=product.slug%>">
            <img height="150" width="100" src="<%=product.coverImagePath%>" alt="products images">
        </a>
        <h3><%=product.productName%></h3>
        <h3>CDN$ <%=parseFloat(product.price).toFixed(2)%></h3>
        <a href="/categories/products/<%=product.category%>/<%=product.slug%>">View Details</a>
    </div>
    <%})%>
</div>