<a href="/admin/categories">Return Back</a>
<h2 class="page-header"><%=category.categoryName%></h2>
<div class="btn-row">
    <a class="btn btn-primary" href="/admin/categories/<%=category.id%>/edit">Edit</a>
    <%- include("../../partials/deleteForm.ejs", {url: `/admin/categories/${category.id}`}); -%>
</div>
<%if (productsByCategory.length > 0) {%>
    <h2 class="page-header">Products By Category</h2>
    <%- include("../../partials/productGrid", {products: productsByCategory})%>
<%}else {%>
    <h2>This category does not have anything. Please upload it.</h2>
<%}%>
